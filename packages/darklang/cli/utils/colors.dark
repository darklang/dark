module Darklang.Cli.Colors

// Basic colors and formatting
let reset = "\u001b[0m"
let bold = "\u001b[1m"
let dim = "\u001b[2m"
let italic = "\u001b[3m"
let underline = "\u001b[4m"

// Cursor and line control
let clearLine = "\u001b[K"
let carriageReturn = "\r"
let moveCursorToColumn (col: Int64) : String = $"\u001b[{col}G"

// Standard colors
let black = "\u001b[30m"
