        let userProgram
          (u: PACKAGE.Darklang.LanguageTools.RuntimeTypes.TypeName.UserProgram)
          : String =
          FQName.userProgram (name u.name) u

        let package
          (p: PACKAGE.Darklang.LanguageTools.RuntimeTypes.TypeName.Package)
          : String =
          FQName.package (name p.name) p


