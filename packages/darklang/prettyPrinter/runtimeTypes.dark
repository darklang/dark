      module FnName =
        let name
          (name: PACKAGE.Darklang.LanguageTools.RuntimeTypes.FnName.Name)
          : String =
          match name with
          | FnName name -> name

        let builtIn
          (f: PACKAGE.Darklang.LanguageTools.RuntimeTypes.FnName.BuiltIn)
          : String =
          FQName.builtIn (name f.name) f

