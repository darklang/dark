(jbuild_version 1)

(executable
  (
    (name main)
    (public_name main)
    (modules main)
    (modes (native))
    (flags (-warn-error (+A)))
    (libraries (dark))
  )
)

(executable
  (
    (name darkjs)
    (public_name darkjs)
    (modules darkjs)
    (libraries (js_of_ocaml-lwt dark))
    (flags (-g))
    (preprocess (pps (js_of_ocaml-ppx)))
  )
)

(alias
 (
  (name darkjs)
  (deps (darkjs.bc.js))
  (action (system "cp darkjs.bc.js ../../../static/"))))


