{
  "name": "darklang-vscode-editor",
  "displayName": "darklang-vscode-editor",
  "description": "For editing Darklang programs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "darklang.showHandlerPanel",
        "category": "Darklang",
        "title": "Show handler panel"
      },
      {
        "command": "darklang-vscode-editor.evalCode",
        "category": "Darklang",
        "title": "Evaluate Dark Code"
      }
    ],
    "configuration": {
      "title": "Darklang",
      "properties": {
        "darklang.chatGptKey": {
          "type": "string",
          "default": null,
          "description": "API key to use for ChatGPT requests."
        },
        "darklang.darkCanvas": {
          "type": "string",
          "default": null,
          "description": "What Dark canvas are you working on?"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "canvas-explorer",
          "title": "Dark Canvas: dark-editor",
          "icon": "media/logo-light-transparent-cropped.svg"
        }
      ]
    },
    "views": {
      "canvas-explorer": [
        {
          "id": "tree-canvas-explorer",
          "name": "Canvas Explorer",
          "icon": "media/logo-light-transparent-cropped.svg",
          "contextualTitle": "Canvas Explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.33.0",
    "glob-promise": "^6.0.2",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  }
}
