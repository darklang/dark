{
  "name": "darklang-vs-code-extension",
  "description": "Darklang VS Code Extension. This is a work-in-progress, not yet ready for general consumption. Join the Discord to learn more.",
  "author": "darklang",
  "version": "0.0.7",
  "icon": "./static/logo-dark.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/darklang/dark"
  },
  "publisher": "darklang",
  "categories": [],
  "keywords": [
    ""
  ],
  "engines": {
    "vscode": "^1.83.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "keybindings": [
    ],
    "languages": [
      {
        "id": "darklang",
        "aliases": [
          "darklang",
          "dark"
        ],
        "extensions": [
          ".dark"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./static/logo-light-transparent.svg",
          "dark": "./static/logo-dark-transparent.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "darklang",
        "scopeName": "source.darklang",
        "path": "./syntaxes/darklang.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Darklang Extension Config",
      "properties": {}
    },
    "semanticTokenTypes": [
      {
        "id": "keyword",
        "description": "Language keywords like 'let' and 'in'"
      },
      {
        "id": "function",
        "description": "Function names or identifiers"
      },
      {
        "id": "parameter",
        "description": "Function parameter identifiers"
      },
      {
        "id": "type",
        "description": "Type names like Int, Bool, etc."
      },
      {
        "id": "string",
        "description": "String literals"
      },
      {
        "id": "operator",
        "description": "Operators like +, -"
      },
      {
        "id": "variable",
        "description": "General variable identifiers"
      }
    ],
    "commands": [
      {
        "command": "darklang.runScript",
        "title": "Run Darklang Script"
      },
      {
        "command": "darklang.lookUpToplevel",
        "title": "Darklang: Look Up Package Element"
      },
      {
        "command": "darklang.openPackageDefinition",
        "title": "Darklang: Open Package Definition"
      },
      {
        "command": "darklang.openFullModule",
        "title": "Open Full Module"
      },
      {
        "command": "darklang.showOpDiff",
        "title": "Show Op Diff"
      },
      {
        "command": "darklang.branch.new",
        "title": "Start New Branch",
        "icon": "$(add)"
      },
      {
        "command": "darklang.branch.switch",
        "title": "Switch Branch",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "darklang.branch.view",
        "title": "View Branch Details",
        "icon": "$(eye)"
      },
      {
        "command": "darklang.branch.rename",
        "title": "Rename Branch",
        "icon": "$(edit)"
      },
      {
        "command": "darklang.branch.quickSwitch",
        "title": "Quick Switch Branch"
      },
      {
        "command": "darklang.branch.clear",
        "title": "Clear Branch"
      },
      {
        "command": "darklang.branch.showMenu",
        "title": "Branch Menu",
        "icon": "$(ellipsis)"
      },
      {
        "command": "darklang.branches.manageAll",
        "title": "Manage All Branches",
        "icon": "$(list-flat)"
      },
      {
        "command": "darklang.openHomepage",
        "title": "Darklang: Open Homepage",
        "icon": "./static/logo-dark-transparent.svg"
      },
      {
        "command": "darklang.packages.search",
        "title": "Search Packages",
        "icon": "$(search)"
      },
      {
        "command": "darklang.packages.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "darklang.changes.review",
        "title": "Review Changes",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "darklang.openHomepage",
          "group": "navigation"
        }
      ],
			"view/item/context": [
        {
					"command": "darklang.openFullModule",
					"when": "view == darklangPackages && viewItem == module",
					"group": "navigation"
				},
        {
					"command": "darklang.branch.rename",
					"when": "view == darklangWorkspace && viewItem == workspace-branch-root",
					"group": "inline@1"
				},
				{
					"command": "darklang.branch.view",
					"when": "view == darklangWorkspace && viewItem == workspace-branch-root",
					"group": "inline@2"
				},
				{
					"command": "darklang.branch.new",
					"when": "view == darklangWorkspace && viewItem == workspace-branch-root",
					"group": "inline@3"
				},
				{
					"command": "darklang.branch.switch",
					"when": "view == darklangWorkspace && viewItem == branch",
					"group": "basic@1"
				},
				{
					"command": "darklang.branch.rename",
					"when": "view == darklangWorkspace && viewItem == branch-item",
					"group": "context@1"
				}
			],
			"view/title": [
				{
					"command": "darklang.packages.search",
					"when": "view == darklangPackages",
					"group": "navigation@1"
				},
				{
					"command": "darklang.packages.clearSearch",
					"when": "view == darklangPackages",
					"group": "navigation@2"
				}
			]
		},
    "viewsContainers": {
      "activitybar": [
        {
          "id": "darklang",
          "title": "Darklang",
          "icon": "static/logo-dark-transparent.svg"
        }
      ]
    },
    "views": {
      "darklang": [
        {
          "id": "darklangWorkspace",
          "name": "Workspace",
          "visibility": "visible"
        },
        {
          "id": "darklangPackages",
          "name": "Packages",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ..",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "mocha": "^11.1.0",
    "typescript": "^4.9.4"
  }
}