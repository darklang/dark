{
  "name": "darklang-vs-code-extension",
  "description": "Darklang VS Code Extension",
  "author": "darklang",
  "version": "0.0.10",
  "icon": "./static/logo-dark.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/darklang/dark"
  },
  "publisher": "darklang",
  "categories": [],
  "keywords": ["darklang"],
  "engines": {
    "vscode": "^1.83.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "keybindings": [],
    "languages": [
      {
        "id": "darklang",
        "aliases": ["darklang", "dark"],
        "extensions": [".dark"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./static/logo-light-transparent.svg",
          "dark": "./static/logo-dark-transparent.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "darklang",
        "scopeName": "source.darklang",
        "path": "./syntaxes/darklang.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Darklang Extension Config",
      "properties": {}
    },
    "semanticTokenTypes": [
      { "id": "keyword", "description": "Language keywords" },
      { "id": "function", "description": "Function names" },
      { "id": "parameter", "description": "Function parameters" },
      { "id": "type", "description": "Type names" },
      { "id": "string", "description": "String literals" },
      { "id": "operator", "description": "Operators" },
      { "id": "variable", "description": "Variables" }
    ],
    "commands": [
      {
        "command": "darklang.openHomepage",
        "title": "Darklang: Open Homepage",
        "icon": "$(home)"
      },
      {
        "command": "darklang.runScript",
        "title": "Run Darklang Script"
      },
      {
        "command": "darklang.lookUpToplevel",
        "title": "Darklang: Look Up Package Element"
      },
      {
        "command": "darklang.openPackageDefinition",
        "title": "Darklang: Open Package Definition"
      },
      {
        "command": "darklang.openFullModule",
        "title": "Open Full Module"
      },
      {
        "command": "darklang.showOpDiff",
        "title": "Show Op Diff"
      },
      {
        "command": "darklang.clearRecentItems",
        "title": "Darklang: Clear Recent Items"
      },
      {
        "command": "darklang.revealInPackagesTree",
        "title": "Darklang: Reveal in Packages Tree"
      },
      {
        "command": "darklang.packages.pin",
        "title": "Pin",
        "icon": "$(pin)"
      },
      {
        "command": "darklang.packages.unpin",
        "title": "Unpin",
        "icon": "$(pinned)"
      },
      {
        "command": "darklang.packages.refresh",
        "title": "Refresh Packages",
        "icon": "$(refresh)"
      },
      {
        "command": "darklang.scm.refresh",
        "title": "Darklang: Refresh SCM",
        "icon": "$(refresh)"
      },
      {
        "command": "darklang.scm.status",
        "title": "Darklang: Show SCM Status",
        "icon": "$(info)"
      },
      {
        "command": "darklang.scm.commit",
        "title": "Darklang: Commit Changes",
        "icon": "$(check)"
      },
      {
        "command": "darklang.scm.log",
        "title": "Darklang: Show Commit Log",
        "icon": "$(history)"
      },
      {
        "command": "darklang.scm.discard",
        "title": "Darklang: Discard Changes",
        "icon": "$(trash)"
      },
      {
        "command": "darklang.scm.showCommit",
        "title": "Show Commit Details"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "darklang.openHomepage",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "darklang.packages.pin",
          "when": "view == darklangPackages && !(viewItem =~ /pinned/)",
          "group": "inline"
        },
        {
          "command": "darklang.packages.unpin",
          "when": "view == darklangPackages && viewItem =~ /pinned/",
          "group": "inline"
        },
        {
          "command": "darklang.openFullModule",
          "when": "view == darklangPackages && viewItem =~ /module/",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "darklang.packages.refresh",
          "when": "view == darklangPackages",
          "group": "navigation@1"
        },
        {
          "command": "darklang.scm.refresh",
          "when": "view == darklangScm",
          "group": "navigation@1"
        },
        {
          "command": "darklang.scm.commit",
          "when": "view == darklangScm",
          "group": "navigation@2"
        },
        {
          "command": "darklang.scm.discard",
          "when": "view == darklangScm",
          "group": "navigation@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "darklang",
          "title": "Darklang",
          "icon": "static/logo-dark-transparent.svg"
        }
      ]
    },
    "views": {
      "darklang": [
        {
          "id": "darklangScm",
          "name": "Source Control",
          "visibility": "visible"
        },
        {
          "id": "darklangPackages",
          "name": "Packages",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:production",
    "compile": "node esbuild.js",
    "compile:production": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "lint": "eslint ./client/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ..",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.26.0",
    "mocha": "^11.1.0",
    "typescript": "^4.9.4"
  }
}
