#!/usr/bin/env bash
. ./scripts/support/assert-in-container "$0" "$@"

set -euo pipefail

DIR=$1

# shellcheck disable=SC2010
MLFILES=$(find "${DIR}" -name "*.ml" | grep -v _build | grep -v __tests__ )

# shellcheck disable=SC2086
LETS=$(grep -P -h '^let ' $MLFILES \
        | sed 's/\s*let\s*//' \
        | awk '{print $1;}' \
        | sort \
        | uniq)

# manual status handling from here, since we want the reverse of grep's usual 0/1
set +e
for z in $LETS; do
  echo -en "$z: " ;
  # shellcheck disable=SC2086
  (grep $z $MLFILES || true ) | wc -l;
done | grep " 1$"

grep_status=$?
if [[ $grep_status = 1 ]]; then
  # No unused lets
  exit 0
elif [[ $grep_status = 0 ]]; then
  # Found >=1 unused let
  exit 1
else exit $grep_status
fi
