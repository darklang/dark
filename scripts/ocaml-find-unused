#!/usr/bin/env bash
. ./scripts/support/assert-in-container "$0" "$@"

set -euo pipefail

DIR=$1

# shellcheck disable=SC2010
MLFILES=$(ls "${DIR}"/*/*.ml | grep -v test.ml | grep -v __tests__ )

LETS=$(grep -P -h '^let ' "${DIR}"/*/*.ml{,i} \
        | sed 's/\s*let\s*//' \
        | awk '{print $1;}' \
        | sort \
        | uniq)

for z in $LETS; do
  echo -en "$z: " ;
  (grep $z $MLFILES || true ) | wc -l;
done | grep " 1$"
