#!/usr/bin/env bash
. ./scripts/devcontainer/_assert-in-container "$0" "$@"

set -euo pipefail

TEST=false
PUBLISHED_FLAG=

for i in "$@"
do
  case "${i}" in
    --test)
    TEST=true
    shift
    ;;
    --published)
    PUBLISHED_FLAG=$i
    ;;
  esac
done

if [[ "$TEST" == "true" ]]; then
  LOG_CANVAS="${DARK_CONFIG_RUNDIR}/logs/test-packages-canvas.log"
else
  LOG_CANVAS="${DARK_CONFIG_RUNDIR}/logs/packages-canvas.log"
fi


grey="\033[1;30m"
reset="\033[0m"

echo -e "Reloading packages ${grey}(${LOG_CANVAS})${reset}"
./scripts/run-local-exec $PUBLISHED_FLAG reload-packages > $LOG_CANVAS 2>&1
echo "Done reloading packages"