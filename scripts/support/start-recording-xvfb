#!/usr/bin/env bash
. ./scripts/support/assert-in-container "$0" "$@"

set -euo pipefail

# ffmpeg needs to be stopped by pressing q, so we run it in tmux, and send a
# 'q' in stop-recording-xvfb.

mkdir -p rundir/videos

export FFREPORT="file=rundir/logs/ffmpeg-$1.log"
tmux new-session -d -s "integrationTests-$1" \
  "ffmpeg  -y  -f x11grab  -video_size 1280*1024  -i :99  -vcodec libx264  -framerate 25  -preset ultrafast  -crf 22  rundir/videos/$1.mp4"
