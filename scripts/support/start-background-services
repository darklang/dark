#!/usr/bin/env bash

set -euo pipefail

echo "" | crontab -

for name in ${@}; do
  if [[ $name == cron ]]; then
    TAB='*/1 * * * *'
    line="$TAB sudo $DARK_CONFIG_SCRIPTS_DIR/trigger_queue_workers >> $DARK_CONFIG_RUN_DIR/logs/cron.log 2>&1"
    (crontab -l; echo "$line") | crontab -
  fi

  echo "--------------------------"
  echo "--  Starting $name"
  echo "--------------------------"
  sudo service "$name" start

done


