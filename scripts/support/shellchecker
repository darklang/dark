#!/usr/bin/env bash
. ./scripts/support/assert-in-container "$0" "$@"

set -euo pipefail

echo "check bash files ..."
# In the scripts/ directory,
# everything with a shebang containing sh (bash, sh)
find ./* \
  -type f \
  -exec awk 'FNR == 1 && /^#!.*sh/{print FILENAME}' {} + \
  | grep -v node_modules \
  | xargs shellcheck
