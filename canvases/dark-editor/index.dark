(
  let body =
    """
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dark Editor - GPT-4 API</title>
    <style>
      * {
        box-sizing: border-box;
      }
      body,
      html {
        margin: 0;
        height: 100%;
      }
      .split-container {
        display: flex;
        height: 100%;
      }
      .left-half,
      .right-half {
        height: 100%;
        flex: 1;
        padding: 20px;
