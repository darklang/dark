      textarea {
        width: 100%;
        height: 80%;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
        resize: none;
      }
      #dark-prompt{
        height: 20%;
      }
      input[type="text"],
      input[type="submit"],
      #copy-btn, #save-prompt, #get-prompt, #vars-btn{
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
