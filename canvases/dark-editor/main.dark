[<HttpHandler("GET", "/fetch-editor")>]
let _handler _req =
  let filePath =  "dark-editor-vue/dist/index.html"
  let file = Experiments.readFromCanvases filePath
  let body =
    match file with
    | Ok f ->  f
    | Error _ -> Bytes.empty

  Http.responseWithHeaders
    (body)
    (Dict.fromListOverwritingDuplicates [ ("Content-Type", "text/html") ])
    200


