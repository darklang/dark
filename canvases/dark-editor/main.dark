[<HttpHandler("GET", "/get-prompt")>]
let _handler _req =
  let filePath = "dark-editor/prompt.txt"
  let prompt = Experiments.readFromCanvases filePath

  let respBody =
    match prompt with
    | Ok p ->  p
    | Error _ -> Bytes.empty

  Http.response respBody 200



