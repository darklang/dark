<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <!-- Publishing configuration -->
    <IsPublishable>false</IsPublishable>
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>
  <ItemGroup>
    <None Include="paket.references" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../Prelude/Prelude.fsproj" />
    <ProjectReference Include="../LibExecution/LibExecution.fsproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Binary/BaseFormat.fs" />

    <Compile Include="Binary/Serializers/Common.fs" />

    <Compile Include="Binary/Serializers/PT/Common.fs" />
    <Compile Include="Binary/Serializers/PT/TypeReference.fs" />
    <Compile Include="Binary/Serializers/PT/PackageType.fs" />
    <Compile Include="Binary/Serializers/PT/Expr.fs" />
    <Compile Include="Binary/Serializers/PT/PackageValue.fs" />
    <Compile Include="Binary/Serializers/PT/PackageFn.fs" />
    <Compile Include="Binary/Serializers/PT/PackageOp.fs" />
    <Compile Include="Binary/Serializers/PT/Toplevel.fs" />

    <Compile Include="Binary/Serializers/RT/Common.fs" />
    <Compile Include="Binary/Serializers/RT/TypeReference.fs" />
    <Compile Include="Binary/Serializers/RT/ValueType.fs" />
    <Compile Include="Binary/Serializers/RT/PackageType.fs" />
    <Compile Include="Binary/Serializers/RT/Dval.fs" />
    <Compile Include="Binary/Serializers/RT/PackageValue.fs" />
    <Compile Include="Binary/Serializers/RT/Instructions.fs" />
    <Compile Include="Binary/Serializers/RT/PackageFn.fs" />

    <Compile Include="Binary/Serialization.fs" />

    <!-- Hashing infrastructure for content-addressed IDs (after Binary serializers) -->
    <Compile Include="Hashing/ContentHash.fs" />
  </ItemGroup>
  <Import Project="..\..\.paket\Paket.Restore.targets" />
</Project>