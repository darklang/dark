module Dates =

  let beforeDate () =
    d "1900-01-01T00:00:00Z"

  let middleDate () =
    d "2000-01-01T00:00:00Z"

  let afterDate () =
    d "2100-01-01T00:00:00Z"

  let prepDates () =
    (let _ = DB.set_v1 { ts = beforeDate null } "before" Timestamp in
    let _ = DB.set_v1 { ts = middleDate null } "middle" Timestamp in
    DB.set_v1 { ts = afterDate null } "after"  Timestamp)

  // DateTime.lessThan
  (let _ = prepDates null in
  DB.queryOne_v4 Timestamp (fun value -> DateTime.lessThan_v0 (middleDate null) value.ts)) =
    Just ({ ts = afterDate null })

  // DateTime.greaterThan
  (let _ = prepDates null in
  DB.queryOne_v4 Timestamp (fun value -> DateTime.greaterThan_v0 (middleDate null) value.ts)) =
    Just { ts = beforeDate null }

