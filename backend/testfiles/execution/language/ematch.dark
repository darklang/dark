// int
(match 5 with
 | 5.6 -> "float"
 | false -> "bool"
 | "myStr" -> "string"
 | () -> "()"
 | Ok x -> "PACKAGE.Darklang.Stdlib.Result.Result.Ok: " ++ x
 | None -> "constructor nothing"
 | 5 -> "int"
 | (1, 2) -> "1 and 2"
 | [ i ] -> "list:" ++ i
 | name -> name ++ "var") = "int"

