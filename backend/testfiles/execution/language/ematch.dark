     | var -> "fail") = "pass"

    (match [ [ 1; 2 ]; [ 3; 4 ] ] with
     | [ a; b ] -> $"pass"
     | [] -> "fail") = "pass"

    (match [ [ 1; 2 ]; [] ] with
     | [ []; _ ] -> "fail"
     | [ [ 1; 2 ]; _ ] -> "pass"
     | _ -> "fail") = "pass"

    (match [ [ 1; 2 ]; [ 3; 4; 5 ] ] with
     | [ [ 1; 2 ]; [ _ ] ] -> "fail"
     | [ [ 1; 2 ]; [ _; _ ] ] -> "fail"
     | [ [ 1; 2 ]; [ _; _; _ ] ] -> "pass") = "pass"

