  module NestedList =

    (match [ [ 1; 2 ]; [ 3; 4 ] ] with
     | [] -> "fail"
     | [ [ 1; 2 ]; [ 3; 4 ] ] -> "pass"
     | var -> "fail") = "pass"

    (match [ [ 1; 2 ]; [ 3; 4 ] ] with
     | [ [ 1; 2 ]; [ 3; 4 ] ] -> "pass"
