module Get =
  // return none for empty store
  (DB.get "lol" XDB) = PACKAGE.Darklang.Stdlib.Option.Option.None

  // return none for invalid key
  (let _ = DB.set (X { x = "hello" }) "key" XDB in DB.get "lol" XDB) = PACKAGE.Darklang.Stdlib.Option.Option.None

  // returns single value
  (let _ = DB.set (X { x = "hello" }) "key" XDB in DB.get "key" XDB) = PACKAGE
    .Darklang
    .Stdlib
    .Option
    .Option
    .Some(X { x = "hello" })

  // returns correct value given reassigned entry
  (let _ = DB.set (X { x = "hello" }) "key" XDB in
   let _ = DB.set (X { x = "goodbye" }) "key" XDB in
   DB.get "key" XDB) = PACKAGE.Darklang.Stdlib.Option.Option.Some(
    X { x = "goodbye" }
  )

  // returns value given multiple entries
  (let _ = DB.set (X { x = "pancake" }) "key1" XDB in
   let _ = DB.set (X { x = "waffle" }) "key2" XDB in
   let _ = DB.set (X { x = "scone" }) "key3" XDB in
   DB.get "key2" XDB) = PACKAGE.Darklang.Stdlib.Option.Option.Some(
    X { x = "waffle" }
