module PartialEvaluation =
  type A = { a: Int }
  type Z = { z: A }
  type Y = { y: Z }
  type AL = { a: List<Int> }
  type ZL = { z: AL }
  type YL = { y: ZL }
  // fieldAccesses outside query
  (let _ = prepFriends ()
   let x = Y { y = Z { z = A { a = 5 } } }

   ((DB.query PersonDB (fun p -> x.y.z.a < p.height))
    |> List.map_v0 (fun p -> p.name)
    |> List.sort_v0)) = [ " Chandler "; "GrumpyCat"; "Rachel"; "Ross" ]

  // fieldAccesses inside query
  (friends (fun p -> let x = Y { y = Z { z = A { a = 5 } } } in x.y.z.a < p.height)) = [ " Chandler "
                                                                                         "GrumpyCat"
                                                                                         "Rachel"
                                                                                         "Ross" ]

  // fieldAccesses inside query
  (friends (fun p ->
    let x = YL { y = ZL { z = AL { a = [ 1; 2; 3; 4; 5 ] } } }
    (x.y.z.a |> List.length_v0) < p.height)) = [ " Chandler "
                                                 "GrumpyCat"
                                                 "Rachel"
                                                 "Ross" ]

  // tuple destructuring inside query
  (friends (fun p ->
    let (a0, a1, a2, a3, ((b, c), d)) = (0, 1, 2, 3, ((5, "aa"), 'a'))
    b < p.height)) = [ " Chandler "; "GrumpyCat"; "Rachel"; "Ross" ]


